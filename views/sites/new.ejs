<!--Template to add a new site-->
    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Site</h1>
        <div class="col-6 offset-3">
            <form action="/sites" method="POST">
                <div class="mb-3">        
                    <label class="form-label" for="name">Name</label> 
                    <input class="form-control" type="text" id="name" name="site[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="site[location]">
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="site[image]">
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="value">Site Value</label>
                    <div class="input-group">
                        <span class="input-group-text" id="value-label">$</span>
                        <input type="text" class="form-control" id="value" placeholder="0.00" aria-label="value" aria-describedby="value-label" name="site[value]">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="image" name="site[description]"></textarea>
                </div> 
                <div class="mb-3">
                    <button class="btn btn-success">Add Site</button>
                </div>
            </form>
            <a href="/sites">All Sites</a>
        </div>
    </div>

