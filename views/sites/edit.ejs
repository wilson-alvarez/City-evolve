<!--Template to edit a site-->
    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Site</h1>
        <div class="col-6 offset-3">
                <!--Overriding the method POST to update my database using PUT-->
            <form action="/sites/<%=site._id%>?_method=PUT" method="POST">
                <div class="mb-3">        
                    <label class="form-label" for="name">Name</label> 
                    <input class="form-control" type="text" id="name" name="site[name]" value="<%=site.name%>">>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="site[location]" value="<%=site.location%>">>
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="site[image]" value="<%=site.image%>">>
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="value">Site Value</label>
                    <div class="input-group">
                        <span class="input-group-text" id="value-label">$</span>
                        <input type="text" class="form-control" id="value" aria-label="value" aria-describedby="value-label" name="site[value]" value="<%=site.value%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="image" name="site[description]"><%=site.description%></textarea>
                </div> 
                <div class="mb-3">
                    <button class="btn btn-info">Update Site</button>
                </div>
            </form>
            <a href="/sites/<%= site._id%>">Back to the Site</a>
        </div>
    </div>
    
    
