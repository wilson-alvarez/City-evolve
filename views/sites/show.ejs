<!--Template to show the information of a single site-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show</title>
</head>
<body>
    <h1><%= site.name %></h1>
    <h2><%= site.location %></h2>
    <p>
        <a href="/sites/<%=site._id%>/edit">Edit</a>
    </p>
    <form action="/sites/<%=site._id%>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
    <footer>

        <a href="/sites">All Sites</a>
    </footer>
</body>
</html>