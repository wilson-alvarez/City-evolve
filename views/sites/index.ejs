<!--Template to show all sites-->
    <% layout('layouts/boilerplate')%>
    <h1>All Sites</h1>
    <ul>
        <% for (let site of sites) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=site.image%>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= site.name %></h5>
                            <p class="card-text"><%= site.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= site.location %></small>
                            </p>
                            <a href="/sites/<%= site._id %>" class="btn btn-primary">View <%= site.name %></a>
                        </div>
                    </div>
                </div>
            </div>
    <% }%>
    </ul>

    