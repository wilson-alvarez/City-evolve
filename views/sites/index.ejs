<!--Template to show all sites-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sites</title>
</head>
<body>
    <h1>All Sites</h1>
    <div>
        <a href="/sites/new">Add Site</a>
    </div>
    <ul>
        <% for (let site of sites) {%>
        <li><a href="sites/<%= site._id %>"><%=site.name %></a></li>
    <% }%>
    </ul>
</body>
</html>